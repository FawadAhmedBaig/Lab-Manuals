#include <iostream>
using namespace std;

int main() {
 float a,b,c,avg;
 cout<<"Enter the 1st number : ";
 cin>>a;
 cout<<"Enter the 2nd number: ";
 cin>>b;
 cout<<"Enter the 3rd number: ";
 cin>>c;
 
 if (a>b && a>c)
 cout<<a<<" is the largest.";
 else if (b>a && b>c)
 cout<<b<<" is the largest.";
 else
 cout<<c<<" is the largest.";
 
return 0;
}
