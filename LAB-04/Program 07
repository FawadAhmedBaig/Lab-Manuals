#include <iostream>
using namespace std;

int main() {
float a,b;
char c;
cout<<"Enter the 1st number : ";
cin>>a;
cout<<"Enter the 2nd number : ";
cin>>b;
cout<<"Enter the operator : ";
cin>>c;
switch(c)
{
case '+':
	cout<<a<<" + "<<b<<" = "<<a+b;
	break;
case '-':
	cout<<a<<" - "<<b<<" = "<<a-b;
    break;
case '*':
	cout<<a<<" * "<<b<<" = "<<a*b;
    break;
case '/':
	cout<<a<<" / "<<b<<" = "<<a/b;
    break;
default :
	cout<<"Invalid Input.";
}

return 0;
}
