#include <iostream>
using namespace std;
int main() {
int first[2][7];
int second[2][7];
int add [2][7];
   cout<<"Enter all temperature for a week of first city and then second city.\n";
  for(int i = 0 ; i<2 ; i++)
  {
  	for(int j=0 ; j < 7 ; j++)
  	{
  		cout<<"City "<<i+1<<", Day "<<j+1<<" : ";
  		cin>>first[i][j];
	}
	cout<<endl;
  }
  
  for(int i = 0 ; i<2 ; i++)
  {
  	for(int j=0 ; j < 7 ; j++)
  	{
  		cout<<"City "<<i+1<<", Day "<<j+1<<" : ";
  		cin>>second[i][j];
	}
	cout<<endl;
  }
  
    for(int i = 0 ; i<2 ; i++)
  {
  	for(int j=0 ; j < 7 ; j++)
  	{
  	 add [i][j] = first[i][j]+second[i][j];
     cout<<first[i][j]<<" + "<<second[i][j]<<" = "<<add[i][j]<<endl;
	}
	cout<<endl;
  }
	
   return 0;
}
