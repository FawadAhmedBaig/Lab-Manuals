#include <iostream>
using namespace std;

int main() {
	int a,b;
	char c;
	cout<<"Enter 1st number : ";
	cin>>a;
	cout<<"Enter 2nd number : ";
	cin>>b;
	cout<<"Enter an operator : ";
	cin>>c;
    switch(c)
    {
    	case '+' :
    		cout<<"The addition is       : "<<a+b;
    		break; 
    	case '-' :
    		cout<<"The Subtraction is    : "<<a-b;
    		break;
    	case '/' :
    		cout<<"The division is       : "<<a/b;
    		break;
		case '*' :
    		cout<<"The multiplication is : "<<a*b;
			break;		
		default:
		    cout<<"Invalid.";				
	}
	
	return 0;
}
